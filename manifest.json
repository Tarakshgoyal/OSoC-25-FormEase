{
  "manifest_version": 3,
  "name": "FormEase",
  "version": "1.0",
  "description": "Resize, compress, and convert files before uploading, directly in-browser.",
  "permissions": ["scripting", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_icon": "icons/logo.png",
    "default_title": "FormEase"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js","scripts/ffmpeg/umd/ffmpeg.js","scripts/ffmpeg/util.js"],
      "css": ["styles.css"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "toolbox.html",
        "styles.css",
        "content.js",
        "scripts/pdf-lib.min.js",
        "scripts/pica.min.js",
        "scripts/resize.js",
        "scripts/compress.js",
        "scripts/assets/ffmpeg/package/dist/umd/ffmpeg.js",
        "scripts/ffmpeg/*",
        "scripts/assets/ffmpeg/package/dist/umd/814.ffmpeg.js",
        "scripts/assets/util/package/dist/umd/index.js",
        "scripts/assets/core/package/dist/umd/ffmpeg-core.js",
        "scripts/assets/*",

        "scripts/assets",

        "scripts/convert.js",
        "scripts/assets",
        "scripts/compressVideo.js",
        "scripts/compressPDF.js",
        "scripts/trimVideo.js",
        "scripts/reset.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
   "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self';",
        "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; child-src 'self';"
    }

}
